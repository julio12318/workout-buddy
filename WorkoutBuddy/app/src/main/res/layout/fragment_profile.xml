<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#D3D3D3">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        android:padding="16dp"> <!-- Add padding to account for the nav bar -->

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="123dp"
            android:layout_height="119dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:textSize="30sp"
            android:text=""
            android:hint="Please Input Your Name:"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="222dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#98ff98"
            android:text="Save"
            app:cornerRadius="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="Current Level: "
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/explanation"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="(Level increases the more exercises are done!)"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/workout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            android:text="Currently Working On:"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/preferences_button"
            android:layout_width="225dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#98ff98"
            android:text="Edit Preferences"
            android:textColor="#000000"
            app:cornerRadius="5dp"/>

        <TextView
            android:id="@+id/explanation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            android:text="Let's Get to Know You:"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/interview_button"
            android:layout_width="222dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#98ff98"
            android:text="Answer Interview"
            android:textColor="#000000"
            app:cornerRadius="5dp"/>

    </LinearLayout>
</ScrollView>
