<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp"> <!-- Add padding to account for the nav bar -->

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="123dp"
            android:layout_height="119dp"
            android:layout_marginTop="72dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:textSize="30sp"
            android:text="FirstName LastName"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="222dp"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Save"
            />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:text="Current Level: "
            />

        <TextView
            android:id="@+id/workout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            android:text="Currently Working On:"
            />

        <TextView
            android:id="@+id/workout_list"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            android:text="..."
            />

        <Button
            android:id="@+id/preferences_button"
            android:layout_width="225dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:text="Edit Preferences"
            />

        <Button
            android:id="@+id/interview_button"
            android:layout_width="222dp"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Answer Interview"
            />

    </LinearLayout>
</ScrollView>
