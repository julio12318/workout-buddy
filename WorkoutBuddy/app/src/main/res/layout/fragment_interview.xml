<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterviewFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Interview Questions:" />

        <TextView
            android:id="@+id/question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="How often do you workout currently?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/once_a_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Once a Week" />

            <RadioButton
                android:id="@+id/twice_a_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twice a Week" />

            <RadioButton
                android:id="@+id/more_a_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Than Twice a Week" />
        </RadioGroup>

        <TextView
            android:id="@+id/question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How much can you lift? (lbs)" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#98ff98"
            android:text="Submit"
            android:textColor="#000000"
            app:cornerRadius="0dp" />

    </LinearLayout>
</FrameLayout>