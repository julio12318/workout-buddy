<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan Your Routines:"
            android:textSize="30sp" />

        <CalendarView
            android:id="@+id/plan_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday, January 1, 2025"
            android:textSize="25sp" />

        <Button
            android:id="@+id/exercise_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Exercises"
            android:backgroundTint="#98ff98"
            android:textColor="#000000"
            />

    </LinearLayout>
</ScrollView>
